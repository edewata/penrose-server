<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE connections PUBLIC
  "-//Penrose/DTD Connections ${product.specification}//EN"
  "http://penrose.safehaus.org/dtd/connections.dtd">

<connections>

  <connection name="IPA">
    <adapter-name>LDAP</adapter-name>
    <parameter>
      <param-name>java.naming.provider.url</param-name>
      <param-value>ldap://ipa.example.com/</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.security.principal</param-name>
      <param-value>uid=sync,cn=sysaccounts,cn=etc,dc=example,dc=com</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.security.credentials</param-name>
      <param-value>Secret123</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.ldap.attributes.binary</param-name>
      <param-value>krbPrincipalKey userPassword</param-value>
    </parameter>
  </connection>

  <connection name="SambaFE">
    <adapter-name>LDAP</adapter-name>
    <parameter>
      <param-name>java.naming.provider.url</param-name>
      <param-value>ldap://samba.example.com/</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.security.principal</param-name>
      <param-value>CN=Sync,CN=Users,DC=samba,DC=example,DC=com</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.security.credentials</param-name>
      <param-value>Secret123</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.ldap.attributes.binary</param-name>
      <param-value>
          objectGUID objectSid ntPwdHistory lmPwdHistory nTSecurityDescriptor
          supplementalCredentials unicodePwd
      </param-value>
    </parameter>
  </connection>

  <connection name="SambaBE">
    <adapter-name>LDAP</adapter-name>
    <parameter>
      <param-name>java.naming.provider.url</param-name>
      <param-value>ldap://samba.example.com:1389/</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.security.principal</param-name>
      <param-value>CN=Manager,DC=samba,DC=example,DC=com</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.security.credentials</param-name>
      <param-value>Secret123</param-value>
    </parameter>
    <parameter>
      <param-name>java.naming.ldap.attributes.binary</param-name>
      <param-value>
          ntPwdHistory lmPwdHistory nTSecurityDescriptor
          supplementalCredentials unicodePwd
      </param-value>
    </parameter>
  </connection>

  <connection name="Database">
    <adapter-name>JDBC</adapter-name>
    <parameter>
      <param-name>driver</param-name>
      <param-value>org.hsqldb.jdbcDriver</param-value>
    </parameter>
    <parameter>
      <param-name>url</param-name>
      <param-value>jdbc:hsqldb:file:partitions/ipa_samba/db/example</param-value>
    </parameter>
    <parameter>
      <param-name>user</param-name>
      <param-value>sa</param-value>
    </parameter>
    <parameter>
      <param-name>password</param-name>
      <param-value></param-value>
    </parameter>
    <parameter>
      <param-name>shutdown</param-name>
      <param-value>true</param-value>
    </parameter>
  </connection>

</connections>
