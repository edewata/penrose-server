<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE modules PUBLIC
  "-//Penrose/DTD Modules ${product.specification}//EN"
  "http://penrose.safehaus.org/dtd/modules.dtd">

<modules>

  <module name="LockoutModule">
    <module-class>org.safehaus.penrose.lockout.module.LockoutModule</module-class>
    <parameter>
      <param-name>limit</param-name>
      <param-value>3</param-value>
    </parameter>
    <parameter>
      <param-name>expiration</param-name>
      <param-value>5</param-value>
    </parameter>
  </module>

  <module-mapping>
    <module-name>LockoutModule</module-name>
    <base-dn>dc=Lockout,dc=Example,dc=com</base-dn>
  </module-mapping>

</modules>
