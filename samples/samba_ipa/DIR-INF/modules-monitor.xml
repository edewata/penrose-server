<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE modules PUBLIC
  "-//Penrose/DTD Modules ${product.specification}//EN"
  "http://penrose.safehaus.org/dtd/modules.dtd">

<modules>

  <module name="ChangeLogMonitorModule">
    <module-class>org.safehaus.penrose.ipa.module.ChangeLogMonitorModule</module-class>
    <parameter>
      <param-name>changelog</param-name>
      <param-value>samba_changelog</param-value>
    </parameter>
    <parameter>
      <param-name>tracker</param-name>
      <param-value>samba_tracker</param-value>
    </parameter>
    <parameter>
      <param-name>modules.count</param-name>
      <param-value>2</param-value>
    </parameter>
    <parameter>
      <param-name>modules.1</param-name>
      <param-value>(targetObjectClass=user):UserModule</param-value>
    </parameter>
    <parameter>
      <param-name>modules.2</param-name>
      <param-value>(targetObjectClass=group):GroupModule</param-value>
    </parameter>
  </module>

</modules>
