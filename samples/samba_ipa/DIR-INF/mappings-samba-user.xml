<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mappings PUBLIC
  "-//Penrose/DTD Mappings ${product.specification}//EN"
  "http://penrose.safehaus.org/dtd/mappings.dtd">

<mappings>

  <mapping name="SambaLoadLinkAttribute">
    <rule name="guid">
      <expression>
import org.safehaus.penrose.samba.*;
if (samba.nsUniqueId == void || samba.nsUniqueId == null) return null;
return Samba.toBinaryGUID(samba.nsUniqueId);
      </expression>
    </rule>
  </mapping>

  <mapping name="SambaLinkUser">

    <rule name="cn">
      <variable>ipa.cn</variable>
    </rule>
    <rule name="sn">
      <variable>ipa.sn</variable>
    </rule>
    <rule name="homeDirectory">
      <variable>ipa.homeDirectory</variable>
    </rule>

  </mapping>

</mappings>
