      <param-value>DC=samba,DC=example,DC=com</param-value>
    </parameter>
    <parameter>
      <param-name>filter</param-name>
      <param-value>(objectClass=group)</param-value>
    </parameter>
  </source>

  <source name="samba_hosts">
